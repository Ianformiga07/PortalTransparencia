<script>
  document.addEventListener('DOMContentLoaded', function() {
    var accordionToggles = document.querySelectorAll('.accordion-toggle');

    accordionToggles.forEach(function(toggle) {
      toggle.addEventListener('click', function(event) {
        event.preventDefault();

        var accordionBody = this.parentElement.nextElementSibling;
        var isOpen = accordionBody.classList.contains('in');

        // Fechar todos os outros accordions
        document.querySelectorAll('.accordion-body').forEach(function(body) {
          body.classList.remove('in');
          body.style.display = 'none';
          body.previousElementSibling.querySelector('i').classList.replace('fa-minus', 'fa-plus');
        });

        // Se o accordion não estava aberto, abrir o clicado
        if (!isOpen) {
          accordionBody.classList.add('in');
          accordionBody.style.display = 'block';
          this.querySelector('i').classList.replace('fa-plus', 'fa-minus');
        } else {
          // Se já estiver aberto, fechá-lo
          accordionBody.classList.remove('in');
          accordionBody.style.display = 'none';
          this.querySelector('i').classList.replace('fa-minus', 'fa-plus');
        }
      });
    });
  });
</script>
